<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><%= link.title %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button type="button" class="btn btn-sm btn-outline-secondary">URL</button>
        </div>
    </div>
</div>


  <div>
  <ul class="list-group">
  
    <li class="list-group-item"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Title:</b></div>
        <div class="col"><%= link.title %></div>
      </div>
    </li>
  
    <li class="list-group-item"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Category:</b></div>
        <div class="col"><%= link.category %></div>
      </div>
    </li>
  
    
    <li class="list-group-item"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Notes:</b></div>
        <div class="col"><%= link.notes %></div>
      </div>
    </li>
  
    <li class="list-group-item"> 
      <div class="row">
        <div class="col" style="max-width: 140px"> <b>Date Created:</b></div>
        <div class="col"><%= link.createdAt %></div>
      </div>
    </li>
  
    
  
  </ul>
</div>
<br>
  <div class="form-group mb-4">
    <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Record</button>
</div>

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <div class="modal-title">You are about to remove a record from the database.</div>
      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
      <p>
        This will remove the record of <b class="fw-bold"><%= link.title %></b><br/>
        Are you sure?
      </p>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      <form action="/edit/<%= link._id %>?_method=DELETE" method="POST" class="position-relative">
        <button type="submit" class="btn btn-primary">Yes, Remove Record</button>
      </form>
    </div>
  </div>
</div>
</div>