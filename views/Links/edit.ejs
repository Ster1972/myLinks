<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Editing:  <%= link.title %></h1>
    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">Future Use</button>
        </div>
    </div>
</div>




<form action="/edit/<%= link._id %>?_method=PUT" method="POST">

    <div class="col">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="Title" value="<%= link.title %>" placeholder="Title" required>
    </div>

    <div class="col">
        <label for="category">Category</label>
        <input type="text" class="form-control" id="category" name="Category" value="<%= link.category %>" placeholder="Category" required>
    </div>

    <div class="col">
        <label for="url">URL</label>
        <input type="text" class="form-control" id="url" name="URL" value="<%= link.linkuri %>" placeholder="URL" required>

    <div class="form-group mb-4">
        <label for="notes">Notes</label>
        <textarea class="form-control" name="Notes" id="notes" cols="30" rows="12" placeholder="Notes"><%= link.notes %></textarea>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Record</button>

        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Record</button>
    </div>

</form>

<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">You are about to remove a record from the database.</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <p>
            This will remove the record of <b class="fw-bold"><%= link.title %></b><br/>
            Are you sure?
          </p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <form action="/edit/<%= link._id %>?_method=DELETE" method="POST" class="position-relative">
            <button type="submit" class="btn btn-primary">Yes, Remove Record</button>
          </form>
        </div>
      </div>
    </div>
  </div>